SHELL := /bin/bash
############### Used Should nod modify the code below ###########


ifeq ($(SRC_AD),)
  $(error SRC_AD is not set)
endif

ifeq ($(BIN_AD),)
  $(error BIN_AD is not set)
endif

ifeq ($(OBJS_AD),)
  $(error OBJS_AD is not set)
endif

ifeq ($(ACDC_LIB_AD),)
  $(error ACDC_LIB_AD is not set)
endif

ifeq ($(ACDC_INC_AD),)
  $(error ACDC_INC_AD is not set)
endif



F90 = gfortran
 
OPTS  = -g -ffree-line-length-none -cpp -J$(OBJS_AD) -I$(OBJS_AD) -I$(ACDC_INC_AD) -fcheck=all -ffpe-trap=invalid,zero,overflow -O3 

  
# When compiling, search for files in these directories:
VPATH = $(OBJS_AD):$(SRC_AD)

            			   
LOOKUP_OBJ =   mo_kind.o mo_debug.o mo_config.o mo_runtime.o mo_utils.o mo_lookup_config.o mo_gen_profile.o  mo_gen_serial.o mo_writer.o mo_gen.o




# Make automatic variables reminder:
#   $@   target
#   $<   first prerequisite
#   $^   all dependencies, duplicates removed

all: build  
build: jgain_serial.exe

	 
# Here is the link step:

jgain_serial.exe: main.o  $(LOOKUP_OBJ)
	 $(F90) $(OPTS) -I$(OBJS_AD) $(addprefix $(OBJS_AD)/,$^)   -o $(BIN_AD)/$@ -lacdc -L$(ACDC_LIB_AD) 

# Here are the compile steps:
# Main program
main.o: main.f90 $(LOOKUP_OBJ)  
	 $(F90) $(OPTS) -c $< -o $(OBJS_AD)/$@



mo_kind.o: mo_kind.f90
	 $(F90) $(OPTS) -c  $< -o $(OBJS_AD)/$@ 
mo_debug.o: mo_debug.f90
