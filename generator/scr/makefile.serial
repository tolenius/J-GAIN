mo_lookup_config.o: mo_lookup_config.f90
	 $(F90) $(OPTS) -c  $< -o $(OBJS_AD)/$@ 
mo_gen_profile.o: mo_gen_profile.f90
	 $(F90) $(OPTS) -c  $< -o $(OBJS_AD)/$@ 	 
mo_gen_serial.o: mo_gen_serial.f90
	 $(F90) $(OPTS) -c  $< -o $(OBJS_AD)/$@ 
mo_writer.o: mo_writer.f90
	 $(F90) $(OPTS) -c  $< -o $(OBJS_AD)/$@ 
mo_gen.o: mo_gen.f90
